{
  "info": {
    "name": " BPSI API - Simple Tests",
    "description": "Simple collection for testing  BPSI API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3002/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Register Staff",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"staff@ BPSI.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Staff\",\n  \"role\": \"staff\",\n  \"department\": \"IT\",\n  \"position\": \"Teacher\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "2. Register Student",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
