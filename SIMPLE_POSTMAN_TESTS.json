          "raw": "{\n  \"email\": \"student@ BPSI.com\",\n  \"password\": \"password123\",\n  \"name\": \"Jane Student\",\n  \"role\": \"student\",\n  \"studentId\": \"STU001\",\n  \"grade\": \"10\",\n  \"section\": \"A\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
